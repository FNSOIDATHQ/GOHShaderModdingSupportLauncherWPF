<Page x:Class="GOHShaderModdingSupportLauncherWPF.Converter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:GOHShaderModdingSupportLauncherWPF"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:loc="clr-namespace:GOHShaderModdingSupportLauncherWPF.Properties"
      mc:Ignorable="d"
      Title="{x:Static loc:i18n.StatusBar_Title}">
    <StackPanel Margin="30,11,30,0">
        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,10">
            <ui:TextBlock Text="{x:Static loc:i18n.C_Path}"
                          TextWrapping="Wrap"
                          FontSize="24"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Foreground="#E4FFFFFF"
                          Margin="0,0,5,0"
                          Padding="0,0,10,0"/>
            <ui:TextBox x:Name="convertPath"
                        TextWrapping="Wrap"
                        Text=""
                        Panel.ZIndex="-8"
                        AcceptsReturn="True"
                        AutoWordSelection="True"
                        Width="650"
                        HorizontalContentAlignment="Stretch"
                        Margin="0,0,5,0"
                        TextChanged="convertPath_TextChanged"/>
            <ui:Button x:Name="viewPath"
                       Click="viewPath_Click">
                <TextBlock Text="{x:Static loc:i18n.C_ViewPath}"
                           FontSize="24"/>
            </ui:Button>
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TabControl x:Name="Tabs"
                        TabStripPlacement="Right"
                        Margin="0, 0, 0, 10"
                        Grid.Column="0"
                        Height="200">
                <TabItem>
                    <TabItem.Header>
                        <TextBlock Text="{x:Static loc:i18n.C_Tab_TextureRemap}"
                                   FontSize="14"
                                   Margin="5,0,5,0"
                                   HorizontalAlignment="Left"/>
                    </TabItem.Header>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock Text="{x:Static loc:i18n.C_Tab_TextureExtInj}"
                                   FontSize="14"
                                   Margin="5,0,5,0"
                                   HorizontalAlignment="Left"/>
                    </TabItem.Header>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock Text="{x:Static loc:i18n.C_Tab_MtlConvert}"
                                   FontSize="14"
                                   Margin="5,0,5,0"
                                   HorizontalAlignment="Left"/>
                    </TabItem.Header>
                </TabItem>
            </TabControl>
            <StackPanel Margin="0,11,0,0"
                        Grid.Column="1"
                        Background="#0FFFFFFF">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility"
                                Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedIndex, ElementName=Tabs}"
                                         Value="0">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
            </StackPanel>
            <StackPanel Margin="0,11,0,0"
                        Grid.Column="1"
                        Background="#0FFFFFFF">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility"
                                Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedIndex, ElementName=Tabs}"
                                         Value="1">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
            </StackPanel>
            <StackPanel Margin="0,11,0,0"
                        Grid.Column="1"
                        Background="#0FFFFFFF">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility"
                                Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedIndex, ElementName=Tabs}"
                                         Value="2">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <ui:Button x:Name="enableEnvMaps"
                           Height="50"
                           Click="enableEnvMaps_Click"
                           Margin="5,5,5,5" Visibility="Hidden">
                    <TextBlock Text="{x:Static loc:i18n.C_EnableEnvMaps}"
                               FontSize="18"/>
                </ui:Button>
            </StackPanel>
        </Grid>

        <Label Background="#4CA8B2BB"
               Foreground="#9EFFFFFF"
               HorizontalContentAlignment="Center"
               FontWeight="Bold"
               Margin="0,10,0,5">
            <TextBlock Text="{x:Static loc:i18n.C_Console}"
                       FontSize="24"/>
        </Label>
        <ui:DynamicScrollViewer IsScrollingVertically="True"
                                IsScrollingHorizontally="True"
                                Height="235"
                                Width="869.33">
            <TextBox x:Name="console"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     Width="869.33"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     MinHeight="235"/>
        </ui:DynamicScrollViewer>


    </StackPanel>
</Page>
