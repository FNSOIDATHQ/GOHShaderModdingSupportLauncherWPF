<Page x:Class="GOHShaderModdingSupportLauncherWPF.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:GOHShaderModdingSupportLauncherWPF"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:loc="clr-namespace:GOHShaderModdingSupportLauncherWPF.Properties"
      mc:Ignorable="d"
      Title="{x:Static loc:i18n.StatusBar_Title}">
    <StackPanel Margin="10,11,10,0">
        <Label Background="#4CA8B2BB"
               Foreground="#9EFFFFFF"
               HorizontalContentAlignment="Center"
               FontWeight="Bold">
            <TextBlock Text="{x:Static loc:i18n.S_General}"
                       FontSize="24"/>
        </Label>
        <Grid Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ui:TextBlock Grid.Column="0"
                          Text="{x:Static loc:i18n.S_GamePath}"
                          FontSize="24"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          Foreground="#E4FFFFFF"
                          Margin="0,0,9,0"/>
            <ui:TextBox Grid.Column="1"
                        x:Name="gamePath"
                        TextWrapping="Wrap"
                        Text="{x:Static loc:i18n.S_GamePathTemplate}"
                        FontSize="24"
                        Panel.ZIndex="-8"
                        AcceptsReturn="True"
                        AutoWordSelection="True"
                        LostFocus="gamePath_LostFocus"
                        HorizontalContentAlignment="Left"
                        Margin="0,0,0,5"/>
            <ui:TextBlock Grid.Column="0"
                          Text="{x:Static loc:i18n.S_GameConfigPath}"
                          FontSize="24"
                          VerticalAlignment="Center"
                          Foreground="#E4FFFFFF"
                          Margin="0,0,5,0"
                          HorizontalAlignment="Left"
                          Grid.Row="1"/>
            <ui:TextBox Grid.Column="1"
                        x:Name="gameConfigPath"
                        TextWrapping="Wrap"
                        Text="{x:Static loc:i18n.S_GameConfigPathTemplate}"
                        FontSize="24"
                        Panel.ZIndex="-8"
                        AcceptsReturn="True"
                        AutoWordSelection="True"
                        LostFocus="gameConfigPath_LostFocus"
                        Grid.Row="1"
                        HorizontalContentAlignment="Left"/>
        </Grid>
        <CheckBox x:Name="pathConfirm"
                  IsChecked="False"
                  Foreground="#E4FFFFFF"
                  Click="pathConfirm_Click">
            <TextBlock Text="{x:Static loc:i18n.S_PathConfirm}"
                       FontSize="24"/>
        </CheckBox>
        <Label Background="#4CA8B2BB"
               Foreground="#9EFFFFFF"
               HorizontalContentAlignment="Center"
               FontWeight="Bold">
            <TextBlock Text="{x:Static loc:i18n.S_BeforeLaunch}"
                       FontSize="24"/>
        </Label>
        <CheckBox x:Name="autoLoadCache"
                  IsChecked="True"
                  Foreground="#E4FFFFFF"
                  Click="autoLoadCache_Click">
            <TextBlock Text="{x:Static loc:i18n.S_AutoLoadCache}"
                       FontSize="24"/>
        </CheckBox>
        <CheckBox x:Name="refreshCacheWhenModified"
                  IsChecked="True"
                  Foreground="#E4FFFFFF"
                  Click="refreshCacheWhenModified_Click">
            <TextBlock Text="{x:Static loc:i18n.S_RefreshCache}"
                       FontSize="24"/>
        </CheckBox>
        <Label Background="#4CA8B2BB"
               Foreground="#9EFFFFFF"
               HorizontalContentAlignment="Center"
               FontWeight="Bold">
            <TextBlock Text="{x:Static loc:i18n.S_AfterGame}"
                       FontSize="24"/>
        </Label>
        <CheckBox x:Name="restore"
                  IsChecked="False"
                  Foreground="#E4FFFFFF"
                  Click="restore_Click">
            <TextBlock Text="{x:Static loc:i18n.S_Restore}"
                       FontSize="24"/>
        </CheckBox>
        <CheckBox x:Name="clearCache"
                  IsChecked="False"
                  Foreground="#E4FFFFFF"
                  Click="clearCache_Click">
            <TextBlock Text="{x:Static loc:i18n.S_Clear}"
                       FontSize="24"/>
        </CheckBox>
        <CheckBox x:Name="gameExit"
                  IsChecked="True"
                  Foreground="#E4FFFFFF"
                  Click="gameExit_Click">
            <TextBlock Text="{x:Static loc:i18n.S_GameExit}"
                       FontSize="24"/>
        </CheckBox>
        <CheckBox x:Name="compileWarning"
                  IsChecked="True"
                  Foreground="#E4FFFFFF"
                  Click="compileWarning_Click">
            <TextBlock Text="{x:Static loc:i18n.S_CompileWarning}"
                       FontSize="24"/>
        </CheckBox>
    </StackPanel>
</Page>
