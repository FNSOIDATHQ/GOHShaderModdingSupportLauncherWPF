<Page x:Class="GOHShaderModdingSupportLauncherWPF.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GOHShaderModdingSupportLauncherWPF"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:loc="clr-namespace:GOHShaderModdingSupportLauncherWPF.Properties"
        mc:Ignorable="d"
        Title="{x:Static loc:i18n.StatusBar_Title}">
    <StackPanel Margin="10,0,10,0">
        <StackPanel Orientation="Horizontal">
            <ui:DataGrid >
                <ui:DataGrid.Columns>
                    <DataGridTextColumn Header="名称" MaxWidth="250" MinWidth="250"/>
                    <DataGridTextColumn Header="类型" MaxWidth="40" MinWidth="40"/>
                    <DataGridCheckBoxColumn Header="包含着色器" MaxWidth="100" MinWidth="100"/>
                </ui:DataGrid.Columns>
            </ui:DataGrid>
            <StackPanel Width="80" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="→加载" HorizontalAlignment="Center"/>
                <Button Content="⬅卸载" HorizontalAlignment="Center"/>
            </StackPanel>
            <ui:DataGrid>
                <ui:DataGrid.Columns>
                    <DataGridTextColumn Header="名称" MaxWidth="250" MinWidth="250"/>
                    <DataGridTextColumn Header="类型" MaxWidth="40" MinWidth="40"/>
                    <DataGridCheckBoxColumn Header="包含着色器" MaxWidth="100" MinWidth="100"/>
                </ui:DataGrid.Columns>
            </ui:DataGrid>
        </StackPanel>
        <Label Content="对选中mod执行操作：" Background="#FF252729" Foreground="#9EFFFFFF" FontWeight="Bold"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="打开mod文件夹"/>
            <Button Content="加载着色器缓存"/>
        </StackPanel>
    </StackPanel>
</Page>
