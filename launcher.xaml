<Page x:Class="GOHShaderModdingSupportLauncherWPF.Launcher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:GOHShaderModdingSupportLauncherWPF"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:loc="clr-namespace:GOHShaderModdingSupportLauncherWPF.Properties"
      mc:Ignorable="d"
      Title="{x:Static loc:i18n.StatusBar_Title}"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      >
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <ui:TextBlock TextWrapping="Wrap"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          FontSize="24"
                          Margin="0,0,5,0"
                          Foreground="#E4FFFFFF">
                <Run Language="zh-cn"
                     Text="{x:Static loc:i18n.L_Method}"/>
            </ui:TextBlock>
            <ComboBox x:Name="launchMethod"
                      SelectedIndex="0"
                      SelectionChanged="LaunchMethod_SelectionChanged"
                      Margin="0,0,11,0"
                      FontSize="20"
                      MinHeight="28"
                      VerticalAlignment="Stretch"
                      Width="180"
                      Height="60"
                      HorizontalContentAlignment="Stretch"
                      VerticalContentAlignment="Stretch">
                <ui:TextBlock Text="{x:Static loc:i18n.L_FileReplace}"
                              FontSize="20"
                              HorizontalAlignment="Left"/>
                <ui:TextBlock Text="{x:Static loc:i18n.L_DX101}"
                              FontSize="20"
                              HorizontalAlignment="Left"/>
            </ComboBox>
            <CheckBox x:Name="addModInfo"
                      IsChecked="True"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Padding="0,0,0,0"
                      Click="AddModInfo_Click">
                <ui:TextBlock Text="{x:Static loc:i18n.L_ModInfo}"
                              FontSize="22"/>
            </CheckBox>
        </StackPanel>
        <Button x:Name="game"
                Height="60"
                Margin="0,0,0,10"
                Click="Game_Click"
                Width="360"
                HorizontalAlignment="Center">
            <TextBlock Text="{x:Static loc:i18n.L_Main}"
                       FontSize="24"/>
        </Button>
        <Button x:Name="editor"
                Height="60"
                Margin="0,0,0,10"
                Click="Editor_Click"
                Width="360"
                HorizontalAlignment="Center">
            <TextBlock Text="{x:Static loc:i18n.L_Editor}"
                       FontSize="24"/>
        </Button>
        <Button x:Name="autoFix"
                Height="60"
                Margin="0,0,0,10"
                Click="AutoFix_Click"
                Width="360"
                HorizontalAlignment="Center">
            <TextBlock Text="{x:Static loc:i18n.L_AutoFix}"
                       FontSize="24"/>
        </Button>
        <Button x:Name="safe"
                Height="60"
                Margin="0,0,0,10"
                Click="Safe_Click"
                Width="360"
                HorizontalAlignment="Center">
            <TextBlock Text="{x:Static loc:i18n.L_Safe}"
                       FontSize="24"/>
        </Button>
    </StackPanel>
</Page>
